<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/peach"
    tools:context=".SignUp">

    <TextView
        android:id="@+id/create_acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"
        android:text="@string/welcome_habi"
        android:textSize="@dimen/thirty_text"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/create_acc_instruc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_acc"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/five"
        android:layout_marginEnd="@dimen/ten"
        android:text="@string/sign_up_instruct"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/five_hundred_img"
        android:layout_height="@dimen/five_hundred_img"
        android:layout_below="@id/create_acc_instruc"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/twenty"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/new_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/twenty"
        android:layout_marginEnd="@dimen/ten"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/new_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_email"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/twenty"
        android:layout_marginEnd="@dimen/ten"
        android:hint="@string/enter_username"
        android:inputType="text" />

    <EditText
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_username"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/twenty"
        android:layout_marginEnd="@dimen/ten"
        android:hint="@string/enter_password"
        android:inputType="textPassword" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_password"
        android:gravity="center"
        android:layout_marginTop="@dimen/twenty"
        android:weightSum="2"
        >

        <Button
            android:id="@+id/create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            android:layout_marginRight="@dimen/ten"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:layout_marginLeft="@dimen/ten"
            android:textAllCaps="false" />

    </TableRow>

</RelativeLayout>